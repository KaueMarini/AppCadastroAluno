<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.DetalhesAlunoActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_aluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <TextView
                android:id="@+id/txv_label_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aluno(a)"
                android:textSize="16sp"
                android:textColor="#555555"/>

            <TextView
                android:id="@+id/txv_nome_aluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Nome Completo do Aluno"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#3A3A3A"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/txv_label_matricula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matrícula"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/txv_matricula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="000000"
                android:text="------"
                android:textSize="34sp"
                android:textStyle="bold"
                android:textColor="#4A55E1"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_gerar_matricula"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Gerar Matrícula"
        android:textSize="18sp"
        android:backgroundTint="#28A745"
        app:layout_constraintTop_toBottomOf="@id/card_aluno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>